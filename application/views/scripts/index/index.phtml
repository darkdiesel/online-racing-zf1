<div id="main_page" class="page">
    <div class="border_box">
        <div class="box_skitter box_skitter_large">
        </div>
    </div>
    <script type="text/javascript">
        // skitter slider plugin
        jQuery(document).ready(function(){
            var options = {};

            options['label'] = true;
            options['numbers'] = true;
            options['preview'] = true;
            options['velocity'] = 2500;
            options['dots'] = true;
            //options['focus'] = true;
            //options['focus_position'] = 'leftTop';
            options['controls'] = false;
            options['controls_position'] = 'rightTop';
            options['hideTools'] = true;
            options['animation'] = 'swapBarsBack';
            //options['easing_default'] = 'random';
            options['interval'] = 5000;
            options['xml'] = '../xml/skitter_slider.xml';

            if (document.location.search) {
                var array = document.location.search.split('=');
                var param = array[0].replace('?', '');
                var value = array[1];

                if (param == 'animation') {
                    options.animation = value;
                }
                else if (param == 'type_navigation') {
                    if (value == 'dots_preview') {
                        $('.border_box').css({'marginBottom': '40px'});
                        options['dots'] = true;
                        options['preview'] = true;
                    } else {
                        options[value] = true;
                        if (value == 'dots')
                            $('.border_box').css({'marginBottom': '40px'});
                    }
                }
            }

            $('.box_skitter_large').css({width: 731, height: 300}).skitter(options);
        });
    </script>
    <div class="page_title"><?php echo $this->translate('Последнее добавления') ?>:</div>
    <div class="div_hr"></div>
    <?php if (count($this->last_articles) != 0) { ?>
        <div id="articles_block">
            <?php
            $filter = new Zend_Filter();
            $filter->addFilter(new Zend_Filter_StripTags())
                    ->addFilter(new Zend_Filter_StringTrim());
            $bbcode = Zend_Markup::factory('Bbcode');

            foreach ($this->last_articles as $article) {
                ?>
                <h6><a href="#"><?php echo $this->truncate($article->title)->toLength(100); ?></a></h6>
                <div>
                    <p class="article_text">
                        <?php if (!$article->image == "") { ?>
                            <img class ="article_image" src='<?php echo $article->image; ?>' width="150px" height="100px" class='img-polaroid article_image'>
                        <?php } ?>
                        <?php echo $this->truncate($bbcode->render($filter->filter($article->text)))->toLength(1000); ?>
                    </p>
                    <a href="<?php echo $this->baseUrl('article/id/' . $this->escape($article->id)) ?>" class="btn btn-small btn-inverse article_more"><?php echo $this->translate("Подробнее...") ?></a>
                </div>
            <?php } ?>
        </div>
        <script type="text/javascript">
            $(document).ready(function(){
                $("#articles_block").accordion({ header: "h6" });
            });
        </script>
    <?php } else {
        ?>
        <div class="alert alert-error alert-block">
            <h4><?php echo $this->translate('Ошибка!'); ?></h4>

            <?php echo $this->translate('Контент на сайте не найден.'); ?>
        </div>
    <?php } ?>
    <div class="page_title"><?php echo $this->translate('Новости из мира Формулы-1') ?>:</div>
    <div class="div_hr"></div>
    <div id="rss_block">
        <?php for ($i = 1; $i < $this->rss_count; $i++) { ?>
            <h6 class="rss_title">
                <a href="#"><?php echo $this->rss_element[$this->rss_index["TITLE"][$i + 1]]["value"]; ?></a>
            </h6>
            <div class="rss_description">
                <p class="rss_text">
                    <?php echo $this->rss_element[$this->rss_index["DESCRIPTION"][$i]]["value"] ?>
                </p>
                <a class="rss_more btn btn-small btn-primary" href="<?php echo $this->rss_element[$this->rss_index["LINK"][$i + 1]]["value"]; ?>" target="_BLINK"><?php echo $this->translate("Подробнее на F1-News.ru") ?></a>
            </div>
        <?php } ?>
    </div>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#rss_block").accordion({ header: "h6" });
        });
    </script>
</div>