                        <?php if ($delete_access) { ?>
                            <a href = "<?php echo $this->baseUrl('team/delete/' . $this->escape($this->team->id)) ?>" class = "btn btn-sm btn-primary article_delete"><?php echo $this->translate('Удалить') ?></a>
