                            <td><span><?php echo $this->escape($this->team->name); ?></span></td>
                        </tr>
                        <tr>
                            <td class="header_column"><span><?php echo $this->translate('Описание'); ?></span></td>
                            <td><span><?php echo $this->escape($this->team->description); ?></span></td>
                        </tr>
                    </tbody>
                </table>
                <?php
                $edit_access = $this->checkUserAccess('team/edit');
                $delete_access = $this->checkUserAccess('team/delete');

                if ($edit_access || $delete_access) {
                    ?>
                    <div class="article_controls">
                        <?php if ($edit_access) { ?>
                            <a href = "<?php echo $this->baseUrl('team/edit/' . $this->escape($this->team->id)) ?>" class = "btn btn-sm btn-primary article_edit"><?php echo $this->translate('Редактировать') ?></a>
