<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <i class="fa fa-list"></i>
                <?php if ($this->checkUserAccess('admin' . Acl::RESOURCE_SEPARATOR . 'league', 'add')) : ?>
                    <?php
                    $adminLeagueAddUrl = $this->url(
                        array('module' => 'admin', 'controller' => 'league', 'action' => 'add'), 'default'
                    );
                    ?>
                    <a href="<?php echo $adminLeagueAddUrl; ?>" class="btn btn-xs btn-primary pull-right ">
                        <i class="fa fa-plus"></i> <?php echo $this->translate('Добавить лигу'); ?>
                    </a>
                <?php endif; ?>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="league-id">
                        <span>ID</span>
                    </th>
                    <th class="league-name">
                        <span><?php echo $this->translate('Название'); ?></span>
                    </th>
                    <th class="league-admin">
                        <span><?php echo $this->translate('Администратор'); ?></span>
                    </th>
                    <th class="league-description">
                        <span><?php echo $this->translate('Описание'); ?></span>
                    </th>
                    <th class="league-action">
                        <span><?php echo $this->translate('Действие'); ?></span>
                    </th>
                </tr>
                </thead>
                <tbody>
                <?php if ($this->leagueData) : ?>
                    <?php foreach ($this->leagueData as $league): ?>
                        <?php if ($this->checkUserAccess('default' . Acl::RESOURCE_SEPARATOR . 'league', 'id')) {
                            $defaultLeagueIdUrl = $this->url(
                                array('module' => 'default', 'controller' => 'league', 'action' => 'id',
                                    'leagueID' => $this->escape($league['ID'])), 'defaultLeagueID'
                            );
                        } else {
                            $defaultLeagueIdUrl = '#';
                        }
                        ?>

                        <?php if ($this->checkUserAccess('default' . Acl::RESOURCE_SEPARATOR . 'user', 'id')) {
                            $defaultUserIdUrl = $this->url(
                                array('module' => 'default', 'controller' => 'user', 'action' => 'id',
                                    'user_id' => $this->escape($league['User']['id'])), 'defaultUserId'
                            );
                        } else {
                            $defaultUserIdUrl = '#';
                        }
                        ?>
                        <tr>
                            <td class="league-id">
                                    <span>
                                        <a href="<?php echo $defaultLeagueIdUrl; ?>">
                                            <?php echo $this->escape($league['ID']) ?>
                                        </a>
                                    </span>
                            </td>
                            <td class="league-name">
                                    <span>
                                        <a href="<?php echo $defaultLeagueIdUrl; ?>">
                                            <?php echo $this->escape($league['Name']) ?>
                                        </a>
                                    </span>
                            </td>
                            <td class="league-admin">
                                    <span>
                                        <a target="_blank" href="<?php echo $defaultUserIdUrl; ?>">
                                            <?php echo $this->escape($league['User']['login']) ?>
                                        </a>
                                    </span>
                            </td>
                            <td class="league-description">
                                    <span>
                                        <?php echo $this->renderContentTypeText($league['Description'], 'full_html'); ?>
                                    </span>
                            </td>
                            <td class="league-action">
                                    <span>
                                        <?php
                                        echo $this->BlockConfigMenu($this->translate("Лига"), false)->leagueMenu(
                                            $this->escape($league['ID']), true
                                        );
                                        ?>
                                    </span>
                            </td>
                        </tr>
                    <?php endforeach; ?>
                <?php endif; ?>
                </tbody>
            </table>
            <div class="panel-footer clearfix">
                <?php if ($this->leagueData) : ?>
                    <div class="pull-right">
                        <?php echo $this->paginationControl(
                            $this->leagueData, 'Sliding', 'pagers/default_pagination_tpl.phtml'
                        ); ?>
                    </div>
                <?php endif; ?>
            </div>
        </div>
    </div>
</div>
